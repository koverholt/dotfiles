# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# Colors
LS_COLORS='no=00:fi=00:di=01;36:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:su=37;41:sg=30;43:tw=30;42:ow=34;42:st=37;44:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.flac=01;35:*.mp3=01;35:*.mpc=01;35:*.ogg=01;35:*.wav=01;35:';

# Set ifort variables
export IFORT_COMPILER=/opt/intel/composerxe
export IFORT_COMPILER_LIB=$IFORT_COMPILER/lib

# Initialize ifort variables
source $IFORT_COMPILER/bin/compilervars.sh intel64
source /opt/intel/inspector_xe/inspxe-vars.sh quiet

# Set unlimited stack size
ulimit -s unlimited

# User aliases
alias svndel="svn status --no-ignore | grep '^[I?]' | cut -c 9-"
alias svndely='svn status --no-ignore | grep "^[I?]" | cut -c 9- | while IFS= read -r f; do rm -rf "$f"; done'
alias wn='svn status | grep -v "?"'
alias cleanup='make --makefile ../makefile clean'
alias cleanupsmv='make --makefile ../Makefile clean'
alias f='cd ~/FDS-SMV'
alias n='cd ~/NIST-FIRE'
alias c='cd ~/cfast'
alias u='svn update'
alias ubuntu='ssh fire76'
alias sd='svn diff'
alias st='svn status'
alias insp='/opt/intel/inspector_xe/bin64/inspxe-cl'
alias clean_fds='rm *.end *.smv *.q *.csv *.err *.out *.sz *.s3d *.bf *.sf *.prt5 *.txt *.sb *.log *.info *.bini'

# FDS aliases
FDS_SVN_ROOT=~/FDS-SMV
CFAST_SVN_ROOT=~/cfast
alias fds="$FDS_SVN_ROOT/FDS_Compilation/intel_linux_64/fds_intel_linux_64"
alias fds_dv="$FDS_SVN_ROOT/FDS_Compilation/intel_linux_64_dv/fds_intel_linux_64_dv"
alias fds_db="$FDS_SVN_ROOT/FDS_Compilation/intel_linux_64_db/fds_intel_linux_64_db"
alias cfast="$CFAST_SVN_ROOT/CFAST/intel_linux_64/cfast6_linux_64"

alias compcfast='cd $CFAST_SVN_ROOT/CFAST/intel_linux_64 ; cleanup ; ./make_cfast.sh'
alias compfds_db='cd ~/FDS-SMV/FDS_Compilation/intel_linux_64_db ; cleanup ; ./make_fds.sh'
alias compfds_dv='cd ~/FDS-SMV/FDS_Compilation/intel_linux_64_dv ; cleanup ; ./make_fds.sh'
alias compfds='cd ~/FDS-SMV/FDS_Compilation/intel_linux_64 ; cleanup ; ./make_fds.sh'
alias compfdsmpi='cd ~/FDS-SMV/FDS_Compilation/mpi_intel_linux_64 ; cleanup ; ./make_fds.sh'
alias compfdsmpiib='cd ~/FDS-SMV/FDS_Compilation/mpi_intel_linux_64ib ; cleanup ; ./make_fds.sh'
alias compallfds='compfds_db ; compfds_dv ; compfds ; compfdsmpi ; compfdsmpiib'
alias compsmv='cd ~/FDS-SMV/SMV/Build/intel_linux_64 ; cleanupsmv ; ./make_smv.sh'
alias compeverything='compallfds ; compsmv'

# Text editor settings
alias nano='nano -w'
export EDITOR='nano'

#FDS Setting environment for FDS and Smokeview.
source ~/.bashrc_fds intel64ib

# Anaconda
export PATH="/home/kjo/anaconda/bin:$PATH"
